<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/italian_kitchen_sample_two"
    android:layout_width="160dp"
    android:layout_height="150dp"
    android:layout_marginLeft="16dp"
    android:background="@drawable/ic_card_frame"
    android:padding="10dp"
    android:layout_margin="15dp">


    <TextView
        android:id="@+id/place_name_sample_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/italian_kitchen_sample_two"
        app:layout_constraintRight_toRightOf="@id/italian_kitchen_sample_two"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Sample place"
        android:textColor="@color/black"
        android:fontFamily="@font/merriweather_regular"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        >
    </TextView>
    <TextView
        android:id="@+id/place_description_sample_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/place_name_sample_two"
        app:layout_constraintLeft_toLeftOf="@id/italian_kitchen_sample_two"
        app:layout_constraintRight_toRightOf="@id/italian_kitchen_sample_two"
        android:text="Aboba aboba"
        android:textColor="@color/black"
        android:fontFamily="@font/merriweather_light"
        android:textSize="10sp"
        android:paddingBottom="5dp"
        android:paddingVertical="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        >
    </TextView>
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/place_description_sample_two"
        app:layout_constraintLeft_toLeftOf="@id/italian_kitchen_sample_two"
        app:layout_constraintRight_toRightOf="@id/italian_kitchen_sample_two">
    <Button
        android:id="@+id/detail_button_two"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Подробнее"

        android:gravity="top|center_horizontal"
        android:textColor="@color/white"
        android:fontFamily="@font/source_sans_pro_bold"
        android:textSize="9sp"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:background="@drawable/details_button"
        />
        <ImageButton
            android:id="@+id/favorite"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="top|center_horizontal"
            android:textColor="@color/white"
            android:fontFamily="@font/source_sans_pro_bold"
            android:textSize="9sp"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:background="@drawable/baseline_favorite_border_24"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>